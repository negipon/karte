<%- include('component/header') -%>
	<div class="l-main c-main">
		<div class="container">
			<div class="c-heading--wrap cf">
				<% if (user.authorityId > 3) { %>
				<a href="/users/add" title="Add User" class="c-button--add">
					<i class="fa fa-plus" aria-hidden="true"></i>
				</a>
				<% } %>
				<h2 class="c-heading--primary"><%= title %> Page</h2>
			</div>
			<% if (user.authorityId > 3) { %>
			<div class="c-card--wrap">
				<ul class="c-card--list">
					<!--
					<% for (var i in users) { %>
					--><li>
						<a href="/users/edit/<%= users[i].id %>" class="c-card--user cf">
							<figure class="c-card--avatar">
								<% if (users[i].avatarFile) { %>
								<img src="/uploads/avatar/<%= users[i].avatarFile %>">
								<% } else { %>
								<img src="//placehold.jp/100x100.png">
								<% } %>
							</figure>
							<div class="c-card--title">
								<h3>
									<span class="c-card--display"><%= users[i].displayName %></span>
									<span class="c-card--username"><%= users[i].username %></span>
								</h3>
								<ul class="c-card--profile-list">
									<li><span class="c-card--number"><%= users[i].number %></span></li>
									<li><span class="c-card--authority"><%= users[i].authorityName %></span></li>
									<li>
										<i class="fa fa-envelope-o" aria-hidden="true"></i>
										<span class="c-card--email"><%= users[i].email %></span>
									</li>
								</ul>
								<span class="c-card--id"><%= users[i].id %></span>
							</div>
						</a>
					</li><!--
					<% } %>-->
				</ul>
			</div>
			<% } else { %>
			<p>権限がありません。</p>
			<% } %>
		</div>
	</div>
<%- include('component/footer') -%>
