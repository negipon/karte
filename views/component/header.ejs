<head>
<meta charset="UTF-8">
<title><%= title %></title>
<meta content="width=device-width, initial-scale=1.0" name="viewport">
<link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel='stylesheet' href='/css/common.min.css'>
</head>
<body>
	<header class="l-header">
		<div class="c-header container">
			<% if (user) { %>
			<div class="l-header--menu">
				<label for="slide-trigger" class="c-header--menu-link" title="Menu"><i class="fa fa-bars" aria-hidden="true"></i></label>
			</div>
			<% } %>
			<div class="l-header--title">
				<h1 class="c-header--heading-primary"><a href="/">Karte</a></h1>
			</div>
			<% if (user) { %>
			<div class="l-header--contents c-header--contents">
				<p class="c-header--display-name">
				<%= user.authorityName %>
				<%= user.displayName %></p>
				<a href="/logout" class="c-header--logout" title="Logout"><i class="fa fa-sign-out" aria-hidden="true"></i></a>
			</div>
			<% } %>
		</div>
	</header>
	<input type="checkbox" id="slide-trigger" class="c-slide--trigger">
	<div class="c-slide--menu">
		<ul class="c-slide--menu-list">
			<li><a href="/">TOP</a></li>
			<li><a href="/users">USERS LIST</a></li>
		</ul>
	</div>
	<label for="slide-trigger" class="c-slide--overlay"></label>
