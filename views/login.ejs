<%- include('component/header') -%>
<div class="l-main">
	<form action="/login" method="post" class="l-form c-form">
		<div class="l-form--row">
			<div class="l-form--row-title">
				<label class="c-form--label">ユーザーID：</label>
			</div>
			<div class="l-form--row-input">
				<input type="text" name="username" class="c-form--input">
			</div>
		</div>
		<div class="l-form--row">
			<div class="l-form--row-title">
				<label class="c-form--label">パスワード：</label>
			</div>
			<div class="l-form--row-input">
				<input type="password" name="password" class="c-form--input">
			</div>
		</div>
		<div class="l-form--row">
			<div class="l-form--submit-wrap">
				<input type="submit" value="ログイン" class="c-form--submit">
			</div>
		</div>
	</form>
</div>
<%- include('component/footer') -%>
