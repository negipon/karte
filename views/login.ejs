<%- include('component/header') -%>
	<div class="l-main c-main">
		<form action="/login" method="post" class="l-form--login c-form--login">
			<div class="l-form--row">
				<div class="l-form--row-input c-form--input-wrap">
					<input type="text" name="username" value="<%= input_id %>" class="c-form--input jsc-input" required>
					<label class="c-form--label">User Name</label>
				</div>
			</div>
			<div class="l-form--row">
				<div class="l-form--row-input c-form--input-wrap">
					<input type="password" name="password" value="<%= input_password %>" class="c-form--input jsc-input" required>
					<label class="c-form--label">Password</label>
				</div>
			</div>
			<% if (error != '') { %>
			<p class="l-form--error c-form--error"><%= error %></p>
			<% } %>
			<div class="l-form--row">
				<div class="l-form--submit-wrap">
					<input type="submit" value="ログイン" class="c-form--submit">
				</div>
			</div>
		</form>
	</div>
<%- include('component/footer') -%>
