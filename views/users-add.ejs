<%- include('component/header') -%>
	<div class="l-main c-main">
		<div class="container">
			<h2 class="c-heading--primary"><%= title %> Page</h2>
			<div class="l-form--add l-form--table">
					<div class="l-form--column column1-3 c-form--upload">
						<form action="/users/upload" method="post" enctype="multipart/form-data">
							<img src="http://placehold.jp/250x250.png">
							<input type="file" onchange="uv.value = this.value;" name="avatar" id="user-upload-photo" class="c-form--upload-input">
							<label for="user-upload-photo" class="c-form--upload-label"><i class="fa fa-file-image-o" aria-hidden="true"></i> Photo File Select</label>
							<input type="text" id="uv" class="c-form--upload-value" disabled>
							<input type="submit" value="submit" id="upload-submit" class="c-form--upload-input">
							<label for="upload-submit" class="c-form--upload-label"><i class="fa fa-upload" aria-hidden="true"></i> Upload</label>
						</form>
					</div>
					<div class="l-form--column">
						<% if (title == 'Edit Users') { %>
						<form action="/users/edit" method="post">
						<% } else { %>
						<form action="/users/add" method="post">
						<% } %>
							<div class="l-form--row">
								<div class="l-form--row-cell c-form--input-wrap">
									<input type="text" name="number" value="<%= users.number %>" class="c-form--input jsc-input">
									<label class="c-form--label">User Number</label>
								</div>
							</div>
							<div class="l-form--row">
								<div class="l-form--row-cell c-form--input-wrap">
									<input type="text" name="username" value="<%= users.username %>" class="c-form--input jsc-input">
									<label class="c-form--label">User Name</label>
								</div>
								<div class="l-form--row-cell c-form--input-wrap">
									<input type="text" name="displayName" value="<%= users.displayName %>" class="c-form--input jsc-input">
									<label class="c-form--label">Display Name</label>
								</div>
							</div>
							<div class="l-form--row">
								<div class="c-form--input-wrap">
									<input type="text" name="email" value="<%= users.email %>" class="c-form--input jsc-input">
									<label class="c-form--label">E-mail</label>
								</div>
							</div>
							<div class="l-form--row">
								<div class="l-form--row-title l-form--row-cell">
									<label class="c-form--label">Authority</label>
								</div>
								<div class="l-form--row-cell c-form--input-wrap">
									<select name="authority" class="c-form--select" value="<%= users.authority %>">
										<option value="1">Member</option>
										<option value="2">Sub Leader</option>
										<option value="3">Leader</option>
										<option value="4">Assistant Manager</option>
										<option value="5">Manager</option>
									</select>
								</div>
							</div>
							<div class="l-form--row">
								<div class="l-form--row-cell c-form--input-wrap">
									<input type="password" name="password" value="<%= users.password %>" class="c-form--input jsc-input">
									<label class="c-form--label">Password</label>
								</div>
							</div>
							<div class="l-form--row">
								<div class="l-form--submit-wrap">
									<input type="submit" value="<%= title %>" class="c-form--submit">
								</div>
							</div>
						</form>
					</div>
				</div>
		</div>
	</div>
<%- include('component/footer') -%>
